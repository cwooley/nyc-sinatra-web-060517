<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= @figure.name %></title>
  </head>
  <body>
    <h1> <%= @figure.name %> </h1>
    <h3>Titles:</h3>
    <ul>
      <% @figure.titles.each do |title| %>
      <li><%= title.name %> </li>
      <% end %>
    </ul>
    <h3>Landmarks:</h3>
    <ul>
      <% @figure.landmarks.each do |landmark| %>
      <li> <%= landmark.name + " " + landmark.year_completed.to_s %> </li>
      <% end %>
    </ul>
  </body>
</html>
